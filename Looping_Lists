#Activity 5 Looping Lists

# Task 1: The for Loop DJ Set
print("Task 1:")
genres = ['Jazz', 'Rock', 'Hip-hop', 'Classical']
for index, genre in enumerate(genres, start=1):
    print(f"Track {index}: Now playing {genre}")

# Task 2: The Remix Artist 
print("\nTask 2:")
index = 1
while index <= len(genres):
    genre = genres[index - 1]
    print(f"Track {index}: Now playing {genre}")
    if genre == 'Hip-hop':
        break
    index += 1

# Task 3: Technician Loop
print("\nTask 3:")
for index in range(len(genres)):
    genre = genres[index]
    if genre == 'Classical':
        continue
    print(f"Track {index + 1}: Light show ready for {genre}")
