#activity 4 Random Game Night 
import random

# List of office supplies
office_supplies = ["pen", "paper", "stapler", "notebook", "scissors"]
# Select a random office supply from the list
selected_item = random.choice(office_supplies)
# Get user's guess
guess = input("Guess which office supply was selected: ")
# Check if the guess is correct
if guess.lower() == selected_item:
    print("Congratulations! You guessed correctly.")
else:
    print(f"Sorry, the selected office supply was {selected_item}. Better luck next time!")

